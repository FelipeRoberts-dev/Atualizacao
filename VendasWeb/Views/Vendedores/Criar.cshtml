@model VendasWeb.Models.ViewModels.VendedorFormViewModel;

@{
    ViewData["Title"] = "Criar Novo Vendedor";
}

<h2>@ViewData["Title"]</h2>


<h4>Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Vendedor.Nome"></label>
                <input asp-for="Vendedor.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Aniversario"></label>
                <input asp-for="Vendedor.DataAniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Salário"></label>
                <input asp-for="Vendedor.BaseSalario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Departamento" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departaments,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

